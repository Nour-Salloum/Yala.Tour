<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity.TripDetails">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/CategoryScroll"
        android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Places"
            android:clickable="true"  android:onClick="onCategoryClick" />
        <TextView
            android:id="@+id/Requirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Requirements"
            android:clickable="true"  android:onClick="onCategoryClick" />
        <TextView
            android:id="@+id/Members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Members"
            android:clickable="true"  android:onClick="onCategoryClick" />
        <TextView
            android:id="@+id/Requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Requests"
            android:clickable="true"  android:onClick="onCategoryClick" />
        <TextView
            android:id="@+id/MyRequirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My Requirements"
            android:clickable="true"  android:onClick="onCategoryClick" />

    </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout  android:id="@+id/data_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Addplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Places to Trip"
            android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/PlacerecyclerView"
            android:scrollbars="vertical"
            android:layout_marginTop="35dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:id="@+id/RequirementsRecyclerView"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:id="@+id/RequestsRecyclerView"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:id="@+id/MembersRecyclerView"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:visibility="gone"
            android:id="@+id/MyRequirementsRecyclerView"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/Save"
            android:visibility="gone"
            android:layout_marginTop="640dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/SaveMyRequirements"
            android:visibility="gone"
            android:layout_marginTop="640dp"/>

    </FrameLayout>

</LinearLayout>
