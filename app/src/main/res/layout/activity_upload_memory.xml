<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".UploadActivities.UploadMemoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Memory"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/lavender"/>

        <LinearLayout
            android:id="@+id/MemoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/upload">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/TextLayout"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/MemoryText"
                android:layout_weight="1"
                android:background="@drawable/lavender_boarder"
                android:padding="16dp"
                android:hint="Enter Text"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender" />

            <ImageButton
                android:id="@+id/AddText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dynamicTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
        </LinearLayout>

        <Button
            android:id="@+id/saveMemoryButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:text="Save"
            app:cornerRadius="20dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
